<section class="signup">
	<div class="hs-head">
		<div class="container">
			<div class="bp-logo"><a href="/"></a></div>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="offset3 span6">
				<div class="row">
					<div class="span6 register-facebook">
						<a href="/auth/facebook" class="btn btn-primary">Login via Facebook</a>
						<span class="or">or</span>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="offset3 span6 signin-form">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' } ) do |f| %>
					<div class="control-group">
					  	<%= f.label :email, 'Email Address:', :class => "control-label" %>
					  	<div class="controls">
					  		<%= f.email_field :email, :autofocus => true %>
					  	</div>
					</div>
					
					<div class="control-group">
				  		<%= f.label :password, 'Password:', :class => "control-label" %>
						<div class="controls">
							<%= f.password_field :password %>
						</div>
					</div>

					<div class="control-group">
					  	<div class="control-label"></div>
					  	<div class="controls">
					   		<%= f.submit "Login", :class => 'btn btn-success' %>
					   	</div>
					</div>

					<div class="control-group">
						<div class="control-label"></div>
						<div class="controls">
							<ul class="links">
								<li><%= link_to "Register", new_registration_path(resource_name) %></li>
								<li><%= link_to "Forgot your password?", new_password_path(resource_name) %></li>
							</ul>
						</div>
					</div>
				<% end %>
				
			</div>
		</div>
	</div>
	<div class="hs-foot">
		<div class="container">
			<div class="hs-logo"></div>
		</div>
	</div>
</section>
