	<header class="site-header" id="top">
		<section class="video-player">
			<div class="container">
				<div class="row">
					<div class="span4">
						<div class="logo">
						</div>
						<div class="event-time">
							Thursday @ 1:00 (MST)
						</div>
					</div>

					<div class="span8">
						<!-- Video Player Here -->
						<div class="the-stream">
							<iframe src="http://new.livestream.com/accounts/3099177/events/2053286/videos/17336523/player?autoPlay=false&height=349&mute=false&width=620" width="620" height="349" frameborder="0" scrolling="no"></iframe>
