    <meta property="og:image" content="https://s3.amazonaws.com/hsbreakingpoint/fb/liveShare.png"/>
	<%= csrf_meta_tags %>

	<!-- STYLESHEETS -->
	<%= stylesheet_link_tag "application", :media => "all" %>

	<!-- SCRIPTS -->
	<%= javascript_include_tag "application" %>

